    "@mikro-orm/better-sqlite": "^5.7.7",
    "@mikro-orm/core": "^5.7.7",
    "@mikro-orm/migrations": "^5.7.7",
    "@mikro-orm/nestjs": "^5.1.5",
    "@nestjs/common": "^9.4.1",
    "@nestjs/core": "^9.4.1",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/mercurius": "^11.0.5",
    "@nestjs/platform-fastify": "^9.4.1",
    "@nestjs/schedule": "^2.2.1",
    "@protobuf-ts/grpc-transport": "^2.9.0",
    "@protobuf-ts/runtime": "^2.9.0",
    "@protobuf-ts/runtime-rpc": "^2.9.0",
    "@ryanke/venera": "^1.0.5",
    "@types/better-sqlite3": "^7.6.4",
    "bytes": "^3.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "exifreader": "^4.12.0",
    "fastify": "^4.17.0",
    "fluent-ffmpeg": "^2.1.2",
    "graphql": "^16.6.0",
    "iso-639-1": "^2.1.15",
    "languagedetect": "^2.0.0",
    "lru-cache": "^9.1.1",
    "mercurius": "^12.2.0",
    "merge": "^2.1.1",
    "mime-types": "^2.1.35",
    "ms": "^2.1.3",
    "msgpackr": "^1.9.1",
    "nest-graphql-utils": "^1.0.0",
    "p-queue": "^7.3.0",
