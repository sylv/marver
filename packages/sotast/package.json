    "@mikro-orm/cli": "^5.7.7",
    "@nestjs/testing": "^9.4.1",
    "@protobuf-ts/plugin": "^2.9.0",
    "@swc/core": "^1.3.58",
    "@types/bytes": "^3.1.1",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/mime-types": "^2.1.1",
